{
    "functions": {
        "source": "backend",
        "runtime": "nodejs20",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    },
    "hosting": {
        "public": "frontend/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules"
        ],
        // Definici√≥n de Rewrites para las APIs (para usar la URL principal)
        "rewrites": [
            {
                "source": "/api/v1/**",
                "function": "apiRouter"
            }
        ]
    }
}
